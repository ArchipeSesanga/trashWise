@model SettingsModel

@{
    ViewData["Title"] = "Settings";
}

<div class="container mt-4 p-3">
    <h2 class="text-center border-bottom pb-2">Settings</h2>

    <div class="row mt-4 justify-content-center">
        

        <!-- Main Settings Section -->
        <section class="col-md-6 ">
            <!-- Profile Settings -->
            <div class="card mb-3">
                <div class="card-header">Profile Settings</div>
                <div class="card-body">
                    <label class="form-label">Profile Picture</label>
                    <input type="file" class="form-control mb-2" />
                    
                    <label class="form-label">Full Name</label>
                    <input type="text" class="form-control mb-2" placeholder="John Doe" />
                    
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control mb-2" placeholder="john@example.com" />
                    
                    <button class="btn btn-primary mt-2">Save Changes</button>
                </div>
            </div>

            <!-- Notification Settings -->
            <div class="card mb-3">
                <div class="card-header">Notifications</div>
                <div class="card-body">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="emailNotif">
                        <label class="form-check-label" for="emailNotif">Email Notifications</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="smsNotif">
                        <label class="form-check-label" for="smsNotif">SMS Notifications</label>
                    </div>
                </div>
            </div>

            <!-- Security & Privacy -->
            <div class="card mb-3">
                <div class="card-header">Security & Privacy</div>
                <div class="card-body ">
                    <button class="btn btn-warning m-1">Change Password</button>
                    <button class="btn btn-danger m-1">Delete Account</button>
                </div>
            </div>

            <!-- Theme Selection -->
            <div class="card">
                <div class="card-header">Preferences</div>
                <div class="card-body">
                    <label class="form-label">Theme</label>
                    <select class="form-select">
                        <option>Light</option>
                        <option>Dark</option>
                    </select>
                </div>
            </div>
        </section>
    </div>
</div>
