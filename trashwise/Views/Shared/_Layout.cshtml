<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>@ViewData["Title"] - Trashwise</title>

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
        <link rel="stylesheet" href="lib/fontawesome-free-6.7.2-web/css/all.css"/>

        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/trashwise.styles.css" asp-append-version="true"/>
    </head>

    <body>
        <div class="main-container">
        <div class="header main-color">
                <div class="logo-container row justify-content-center">
                <div class="col-12 col-sm-6 col-md-4">
                    <img src="~/image/Logo.png" id="logo" class="logo rounded-4 img-fluid border border-3 border-black" alt="Logo" />
                </div>
                <div class="logo-text col-12 col-sm-6 col-md-4">
                        <h4>TrashWise</h4>
                    </div>
                </div>
                <div class="d-flex flex-column align-items-end ms-auto">
                    <button id="profile-btn" class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 pt-2 mb-2 rounded-pill border border-3 border-black text-dark">
                        <i class="bi bi-person-circle "></i> Profile Photo
                    </button>
                    <div class="search-container mt-1 ">
                        <div class="search-container ">
                            <input type="text" placeholder="Search..." id="search-input" class=" rounded-pill border border-3 border-black p-1 ps-2">
                            <button id="search-button" class="btn btn-outline-light border border-3 border-black">🔍</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="side-panel main-color text-white p-3 d-flex flex-column align-items-center w-100">
                <div class="side-panel-wrapper w-100">
                    <div class="nav flex-column text-center w-100">
                        <a class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 pt-2 mb-2 rounded-pill border border-3 border-black text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-2 "></i> Home
                        </a>
                        <a class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 pt-2 mb-2 rounded-pill border border-3 border-black text-dark" asp-area="" asp-controller="RequestPickup" asp-action="RequestPickup">
                            <i class="bi bi-truck me-2"></i> Request Pick-up
                        </a>
                        <a class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 pt-2 mb-2 rounded-pill border border-3 border-black text-dark" asp-area="" asp-controller="DropOff" asp-action="DropOff">
                            <i class="bi bi-box-seam me-2"></i> Drop off Near You
                        </a>
                        <a class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 pt-2 mb-2 rounded-pill border border-3 border-black text-dark" asp-area="" asp-controller="VideosTutorial" asp-action="VideosTutorial">
                            <i class="bi bi-camera-video me-2"></i> Videos and Tutorials
                        </a>
                    <a class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 pt-2 mb-2 rounded-pill border border-3 border-black text-dark" asp-area="" asp-controller="CommunityEvent" asp-action="CommunityEvent">
                            <i class="bi bi-people me-2"></i> Community Events
                        </a>
                    </div>
                    <div class="nav flex-column text-center w-100 bg-warning p-3 rounded-3">
                        <a class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 pt-2 mb-2 rounded-pill border border-3 border-black text-dark" asp-area="" asp-controller="Account" asp-action="LogoutView">
                            <i class="bi bi-box-arrow-right me-2"></i> Log out
                        </a>
                        <a class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 mb-2 rounded-pill border border-3 border-black text-dark" asp-area="" asp-controller="Settings" asp-action="Settings">
                            <i class="bi bi-gear me-2"></i> Settings
                        </a>
                    </div>
                </div>
            </div>
            <div class="content">
                @RenderBody()
            </div>
            <div class="footer">
                <div class="container pt-lg-4">
                    &copy; 2025 - Trashwise - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>