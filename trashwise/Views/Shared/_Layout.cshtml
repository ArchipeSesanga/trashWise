<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>@ViewData["Title"] - Trashwise</title>

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
        <link rel="stylesheet" href="lib/fontawesome-free-5.15.4-web/css/all.css"/>

        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/trashwise.styles.css" asp-append-version="true"/>
    </head>

    <body>
        <div class="main-container">
            <div class="header main-color">
                <div class="logo-container row justify-content-center">
                    <div class="col-12 col-sm-6 col-md-6">
                        <img src="~/image/Logo.png" id="logo" class="logo rounded-4 img-fluid " alt="Logo" />
                    </div>
                    <div class="logo-text pt-4 col-12 col-sm-6 col-md-4">
                        <h1 class="text-white pt-1">TrashWise</h1>
                    </div>
                </div>
                <div class="d-flex flex-column align-items-end ms-auto">
                    <!--Profile picture-->
                    <div class="">
                        <img src="~/image/profile_picture.jpg" class="rounded-circle border border-1" alt="Profile Picture" width="50" height="50">
                    </div>
                    

                    <!--Search Bar-->
                    <div class="search-bar">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search..." aria-label="Search" aria-describedby="search-addon">
                            <button class="btn btn-outline-secondary" type="button" id="search-addon">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!--Navigation-->
            <div class="side-panel main-color text-white p-3 d-flex flex-column align-items-center w-100">
                <div class="side-panel-wrapper pt-5 w-100">
                    <div class="nav flex-column text-center w-100">
                        <a class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 pt-2 mb-2 rounded-pill text-body" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-2 "></i> Home
                        </a>
                        <a class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 pt-2 mb-2 rounded-pill text-body " asp-area="" asp-controller="RequestPickup" asp-action="RequestPickup">
                            <i class="bi bi-truck me-2"></i> Request Pick-up
                        </a>
                        <a class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 pt-2 mb-2 rounded-pill text-body " asp-area="" asp-controller="DropOff" asp-action="DropOff">
                            <i class="bi bi-box-seam me-2"></i> Drop off Near You
                        </a>
                        <a class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 pt-2 mb-2 rounded-pill text-body " asp-area="" asp-controller="VideosTutorial" asp-action="VideosTutorial">
                            <i class="bi bi-camera-video me-2"></i> Videos and Tutorials
                        </a>
                        <a class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 pt-2 mb-2 rounded-pill text-body " asp-area="" asp-controller="CommunityEvent" asp-action="CommunityEvent">
                            <i class="bi bi-people me-2"></i> Community Events
                        </a>
                    </div>
                    <!--Log out and settings-->
                    <div class="nav flex-column text-center w-100 p-3 mt-5 rounded-3 setting-container">
                        <a class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 mb-2 rounded-pill text-body" asp-area="" asp-controller="Settings" asp-action="Settings">
                            <i class="bi bi-gear me-2"></i> Settings
                        </a>
                        <a class="btn btn-outline-light nav-container nav-link d-inline-block w-auto px-3 py-2 pt-2 mb-2 rounded-pill text-danger " asp-area="" asp-controller="Account" asp-action="LogoutView">
                            <i class="bi bi-box-arrow-right me-2"></i> Log out
                        </a>

                    </div>
                </div>
            </div>
            <div class="content">
                @RenderBody()
            </div>
            <div class="footer">
                <div class="container pt-lg-4">
                    &copy; 2025 - Trashwise - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>