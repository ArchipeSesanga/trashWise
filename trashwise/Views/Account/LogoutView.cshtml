@model trashwise.Models.Account

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container d-flex justify-content-center align-items-center vh-100 p-3">
    <div class="card shadow-lg text-center p-4" style="max-width: 400px;">
        <div class="card-body">
            <i class="bi bi-box-arrow-right text-danger" style="font-size: 3rem;"></i>
            <h3 class="mt-3">Are you sure?</h3>
            <p class="text-muted">You are about to log out from your account.</p>
            
            <form method="post" asp-action="Logout" asp-controller="Account">
                <button type="submit" class="btn btn-danger w-100 mb-2">Yes, Log Out</button>
            </form>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary w-100">Cancel</a>
        </div>
    </div>
</div>
